<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:security="http://www.springframework.org/schema/security"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd">
	
    <security:http auto-config="true" use-expressions="true" >
        <security:intercept-url pattern="/board/BoardList.do?useId=1" access="ROLE_USER" />              
    	<security:form-login
    		login-processing-url="/login" 
    		login-page="/login-page" 
    		default-target-url="/board/BoardList?useId=1"
			authentication-failure-url="/login-fail" />		
    	<security:logout logout-success-url="/logout"/>    
    	<security:intercept-url pattern="/board/BoardList/**" access="authenticated"/>	    	
    </security:http>    
    
   <security:authentication-manager >    	    	
    	<security:authentication-provider user-service-ref="loginService" />    	    	
    </security:authentication-manager>
    
    <bean id="loginService" class="jylSystem.mybatis.service.LoginService"/>
</beans>


