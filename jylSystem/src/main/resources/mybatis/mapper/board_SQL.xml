<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="board">
     
    <select id="selectBoardList" resultType="hashmap">
        <![CDATA[
            select USR_ID
			     , USR_NM
			     , USR_ENG_NM
			     , PWD
			  from MEMBER
        ]]>
    </select>
    <select id="getBoardCount" resultType="int">
        <![CDATA[
            select count(*) as cnt 
			  from MEMBER
        ]]>
    </select>
     <select id="boardModify" resultType="jylSystem.bean.BoardBean">
        <![CDATA[
            SELECT USR_ID
                 , USR_NM
                 , PWD
              FROM MEMBER
             WHERE USR_ID = #{usr_id}
        ]]>
    </select>
    <select id="boardInsert">
        <![CDATA[
            INSERT INTO MEMBER
            (USR_ID, USR_NM, PWD)
            VALUES
            (#{usr_id}, #{usr_nm}, #{pwd})
        ]]>
    </select>
    <select id="boardUpdate">
        <![CDATA[
            UPDATE MEMBER
               SET USR_NM = #{usr_nm}
                 , PWD    = #{pwd}
             WHERE USR_ID = #{usr_id}
        ]]>
    </select>
    <select id="boardDelete">
        <![CDATA[
            DELETE FROM MEMBER
             WHERE USR_ID = #{usr_id}
        ]]>
    </select>
    
</mapper>